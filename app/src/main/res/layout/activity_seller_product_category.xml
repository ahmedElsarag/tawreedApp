<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".seller.SellerProductCategoryActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select category"
            android:textSize="24sp"
            android:textColor="@color/divider"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/linear1_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/select"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/item_category_box"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/t_shirts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tshirticon"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/item_category_box"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/sports_t_shirts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/sport" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/item_category_box"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/female_dresses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dress" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear2_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear1_category_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/item_category_box"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/glasses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sunglasses"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/item_category_box"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/purses_bags_wallets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/bag" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/item_category_box"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/hats_caps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/hat" />
            </RelativeLayout>


            <!--            <ImageView-->
            <!--                android:id="@+id/sweathers"-->
            <!--                android:layout_width="90dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:src="@drawable/sweather" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear2_category_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/item_category_box"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/sweathers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/coat"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/item_category_box"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/shoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/sneakers" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/item_category_box"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/headphones_handfree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/headphone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear4_category_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear3_category_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/item_category_box"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/laptop_pc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/desktop"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/item_category_box"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/watches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/handwatch" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:background="@drawable/item_category_box"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/mobilephones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/smartphone" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>